<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <title>Web Card: @ViewBag.Title</title>
    <environment include="Development">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />*@
    <link href="~/css/site.css" rel="stylesheet"  />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
        <link href="~/dist/webcard.min.css" rel="stylesheet" asp-append-version="true"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    </environment>

    @RenderSection("head", false)
</head>
<body>
    <header class="">

        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="bi bi-building"></i>  Welcome to players market</h1>
            <button class="navbar-toggler me-3">
                <span class="navbar-toggler-icon " data-toggle="collapse" data-target="#MainMenu"></span>
            </button>
            <div id="MainMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav me-2 text-center">
                    <li class="nav-item">

                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">

        <h1 class="text-center">@ViewBag.Title</h1>
    </section>
    @RenderBody()
    <footer class="container">
        <div class="text-center">Copyright 2021</div>
    </footer>

    <environment include="Development">
         
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/index.js"></script>
    </environment>

    <environment exclude="Development">
        @*<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>*@

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/dist/webcard.min.js" asp-append-version="true"></script>
    </environment>


    @RenderSection("Scripts", false)
</body>
</html>